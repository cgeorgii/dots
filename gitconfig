[push]
	default = simple
[alias]
  cb = checkout -b
  pp = pull --prune
	co = checkout
	cm = commit
	cmm = commit -m
	cma = commit --amend --no-edit
	st = status
  di = diff
  dc = diff --cached
  dw = diff --word-diff
  dwc = diff --word-diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
