      vim.g.jsx_ext_required = 1
    end,
  },
  {
    "j-hui/fidget.nvim",
    tag = "v1.0.0",
    opts = {
      -- options
    },
  },
  { "jiangmiao/auto-pairs" },
  { "mustache/vim-mustache-handlebars" },
  { "nelstrom/vim-visual-star-search" },
